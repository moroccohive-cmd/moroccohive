generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Circuit {
  id              String     @id @default(auto()) @map("_id") @db.ObjectId
  slug            String     @unique
  name            String
  tagline         String?
  description     String
  duration        Int // Number of days
  category        String // e.g., "Imperial Cities", "Desert Adventure", "Coastal", "Mountain"
  price           Float
  originalPrice   Float? // Optional original / crossed-out price
  isFrom          Boolean    @default(false) // Whether the price is a "from" price
  images          String[]
  highlights      String[] // Key highlights/features
  included        String[] // Services included
  excluded        String[] // Services not included
  optional        String[] // Optional services
  itineraryGlance String[] // Brief day-by-day overview (e.g., "Day 1: Arrival in Marrakech")
  itineraryDetail String // Rich text/markdown for detailed itinerary
  additionalInfo  String? // Additional rich text content
  mapUrl          String? // URL to embedded map or map data
  featured        Boolean    @default(false)
  active          Boolean    @default(true)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  favorites       Favorite[]
}

model BlogPost {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  slug       String   @unique
  title      String
  content    String // Rich Text
  excerpt    String?
  coverImage String?
  author     String?
  tags       String[]
  published  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model TripRequest {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  travelStyle         String // solo, couple, family, group
  travelDates         String // Date range or flexible dates
  arrivalCity         String
  departureCity       String
  accommodation       String // budget, standard, luxury, mixed
  budget              String // Budget range
  adventureActivities String[] // Selected activities
  experiences         String[] // Selected experiences
  importantFactors    String[] // Selected important factors
  desiredExperiences  String // Text description
  transportation      String? // How to explore (private car, public transport, mix)
  importantCriteria   String? // What matters most
  numberOfTravelers   Int
  travelerAges        String? // Age ranges or specific ages
  extraDetails        String? // Additional information
  fullName            String
  email               String
  phone               String
  status              String   @default("new") // new, contacted, in-progress, quoted, confirmed, cancelled
  adminNotes          String? // Internal notes
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model ContactMessage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  phone     String?
  subject   String
  message   String
  status    String   @default("unread") // unread, read, replied
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id            String     @id @map("_id")
  name          String
  email         String     @unique
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]
  favorites     Favorite[]

  password String?
  role     String? @default("user")

  @@map("user")
}

model Favorite {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  circuitId String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  circuit   Circuit  @relation(fields: [circuitId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, circuitId])
}

model Session {
  id        String   @id @map("_id")
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id @map("_id")
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id @map("_id")
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}
